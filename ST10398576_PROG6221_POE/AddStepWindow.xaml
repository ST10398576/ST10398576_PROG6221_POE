<Window x:Class="ST10398576_PROG6221_POE.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10398576_PROG6221_POE"
        mc:Ignorable="d"
        Title="Add Step" Height="300" Width="400">
    <Grid Background="AliceBlue">
        <TextBlock HorizontalAlignment="Center" Margin="0,21,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="Adding a Step" VerticalAlignment="Top" Width="380" Height="38" FontSize="20" Background="Aquamarine"/>
        <TextBlock Margin="55,79,210,171" Text="Step:"/>
        <TextBox Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="StepTextBox" Margin="145,79,0,0" Height="22"/>

        <Button Margin="10,131,10,103" Content="Add Step" Click="AddStep_Click" Background="YellowGreen"/>
        <Button Margin="10,203,10,38" Content="Cancel" Click="Cancel_Click" Background="YellowGreen"/>
    </Grid>
</Window>
