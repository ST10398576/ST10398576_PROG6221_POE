<Window x:Class="ST10398576_PROG6221_POE.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select Recipe:"/>
            <ComboBox x:Name="RecipeComboBox" DisplayMemberPath="Name" Width="200" Margin="5"/>

            <TextBlock Text="Select Scaling Factor:" Margin="5"/>
            <ComboBox x:Name="ScaleFactorComboBox" Width="200" Margin="5">
                <ComboBoxItem Content="0.5"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
            </ComboBox>

            <Button Content="Scale" Width="150" Margin="5" Click="ScaleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>