<Window x:Class="ST10398576_PROG6221_POE.DisplayRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Display Recipes" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="RecipesListBox" Margin="65,41,185,105" SelectionChanged="RecipesListBox_SelectionChanged" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="CloseButton" HorizontalAlignment="Right" Width="75" Height="23" Click="CloseButton_Click" Margin="0,253,285,58">Close</Button>
    </Grid>
</Window>